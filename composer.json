{
    "name": "respinar/contao-splide-bundle",
    "description": "a lightweight, flexible and accessible slider/carousel for Contao",
    "keywords": ["contao", "bundle", "splide"],
    "type": "contao-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Hamid Peywasti",
            "email": "abbaszadeh.h@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "contao/core-bundle": "^5.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Respinar\\ContaoSplideBundle\\": "src/"
        },
        "classmap": [
            "contao/"
        ],
        "exclude-from-classmap": [
            "contao/config/",
            "contao/dca/",
            "contao/languages/",
            "contao/templates/"
        ]
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "contao-community-alliance/composer-plugin": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Respinar\\ContaoSplideBundle\\ContaoManager\\Plugin"
    }
}
